{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "parser": "@typescript-eslint/parser"
    },
    "plugins": [
        "@typescript-eslint"  
    ],
    "extends": ["plugin:@typescript-eslint/recommended"],
    "rules": {
        "@typescript-eslint/indent": ["error", 4],
        "@typescript-eslint/explicit-module-boundary-types": ["off"],
        "@typescript-eslint/no-var-requires": "off"
    }
}